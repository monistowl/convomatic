<div id="edit-project">
    <div class="container">

        <h1>Editing Project</h1>
        <hr/>
        <p>Define the parameters for your conversation study below:</p>
        <form id=edit-form action="/api/v1/dashboard/save-project" method="POST">
            <div class="form-group">
                <label for="edit-form-name">Project Name</label>
                <input id="edit-form-name" class="form-control" type="text" name="name" value=<%= project.name %>></input>
            </div>
            <div class="form-group">
                <label for="edit-form-welcome">Welcome Text</label>
                <input id="edit-form-welcome" class="form-control" type="text" name="welcome" value=<%= project.welcome %>></input>
            </div>
            <div id=prompts-dynamic-list class="form-group">
                <div class="row input-group">
                    <input class="form-control" name="prompt-texts[]" type="text" placeholder="Type something"></input>
                    <input class="form-control" name="prompt-urls[]" type="text"></input>
                    <input class="form-control" name="prompt-delays[]" type="number"></input>
                    <span class="input-group-append input-group-btn">
                        <button class="btn btn-success btn-add" type="button">
                            <span class="fa fa-plus"></span>
                        </button>
                    </span>
                </div>
            </div>
            <input type="hidden" name="_csrf" value="<%- _csrf %>" />
            <input type="submit" value="Save Project"></input>
        </form>

        <button class="btn" type="button" id="log">
            LOG
        </button>

    </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
<% block('localScripts', '<script src="/js/local/edit-project-local.js"></script>') %>
